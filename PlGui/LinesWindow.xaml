<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PlGui.LinesWindow"
        mc:Ignorable="d"
        Title="LinesWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="lineViewSource" d:DesignSource="{d:DesignInstance {x:Type BO:Line}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource lineViewSource}">
        <ListView x:Name="ListView_Lines" HorizontalAlignment="Center" Width="540" MouseDoubleClick="ListBus_SelectionDetail" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            ItemsSource= "{Binding}" Margin="0,16,252,0" FontWeight="Bold" BorderBrush="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}}" FontSize="14" Background="#FFF7C07D" >


            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </ListView.ItemContainerStyle>





            <ListView.View>
                <GridView >
                    <GridViewColumn  Header="ID" Width="90" DisplayMemberBinding="{Binding License}" />
                    <GridViewColumn Header="Stations"  Width="90" DisplayMemberBinding="{Binding DateStart_str}"  />
                    <GridViewColumn Header="Km remaining" Width="122" DisplayMemberBinding="{Binding Km_remaining}"/>



                </GridView>


            </ListView.View>


        </ListView>
        <Grid x:Name="grid1" HorizontalAlignment="Left" Margin="545,38,0,0" VerticalAlignment="Top" Height="220" Width="247" RenderTransformOrigin="0.393,0.712" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="40"/>
                <RowDefinition Height="Auto" MinHeight="42"/>
                <RowDefinition Height="Auto" MinHeight="40"/>
                <RowDefinition Height="Auto" MinHeight="50"/>
                <RowDefinition Height="Auto" MinHeight="45"/>
            </Grid.RowDefinitions>
            <Label Content="Area:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,9,0,7" Grid.Row="0" VerticalAlignment="Center" Height="26" Width="37"/>
            <TextBox x:Name="areaTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="3,11,0,9" Grid.Row="0" Text="{Binding Area, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Code Line:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="65"/>
            <TextBox x:Name="codeLineTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="3,12,0,8" Grid.Row="1" Text="{Binding CodeLine, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="First Station:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,7,0,8" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="75"/>
            <TextBox x:Name="firstStationTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="3,10,0,9" Grid.Row="2" Text="{Binding FirstStation, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Last Station:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,12,0,12" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="74"/>
            <TextBox x:Name="lastStationTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="3,13,0,13" Grid.Row="3" Text="{Binding LastStation, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
            <Label Content="Line Id:" Grid.Column="0" HorizontalAlignment="Left" Margin="3,7,0,12" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="48"/>
            <TextBox x:Name="lineIdTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="3,10,0,12" Grid.Row="4" Text="{Binding LineId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>
        </Grid>




    </Grid>
</Window>
