<Window x:Class="PlGui.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">

    <Grid RenderTransformOrigin="0.033,1">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF323028" Offset="0.017"/>
                <GradientStop Color="#FF323231" Offset="0.996"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBox HorizontalAlignment="Left" Height="68" TextWrapping="Wrap" Text="Login as :" VerticalAlignment="Top" Width="235" TextChanged="TextBox_TextChanged" Margin="23,52,0,0" FontSize="35" BorderBrush="{x:Null}" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="{x:Null}"/>
        <RadioButton Content=" Administrator" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="280" Margin="347,107,0,0" FontSize="30" BorderBrush="{x:Null}" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" VerticalContentAlignment="Center" Padding="6,-1,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="68" TextWrapping="Wrap" Text="! ברוך הבא" VerticalAlignment="Top" Width="271" TextChanged="TextBox_TextChanged" Margin="263,-10,0,0" FontSize="48" BorderBrush="{x:Null}" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Background="{x:Null}"/>
        <RadioButton Content=" Traveller" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="280" Margin="45,107,0,0" FontSize="30" BorderBrush="{x:Null}" Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" VerticalContentAlignment="Center"/>
        <StackPanel Margin="379,170,45,10" Background="#FF444444">
            <Label Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" FontSize="30" Content="User Name :" Background="#FF444444"/>
            <TextBox Height="42" />
            <Label Foreground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" FontSize="30" Content="Password :" Background="#FF444444"/>
            <PasswordBox Height="42" />
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="744,0,0,0" Height="38" Width="43" Foreground="White" FontSize="16"><Run FlowDirection="RightToLeft" Text="בס''ד"/></TextBlock>
        <Button Content="Login" HorizontalAlignment="Left" Height="33" Margin="608,374,0,0" VerticalAlignment="Top" Width="100" FontSize="20"/>
    </Grid>
</Window>
